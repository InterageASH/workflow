REMOTE_DATABASE_STATGING="domain_staging";
REMOTE_DUMP_PATH_STATGING="/home/deployer/dumps";
REMOTE_USER_PRODUCTION="deployer";
REMOTE_HOST_PRODUCTION="domain.com";
REMOTE_DATABASE_PRODUCTION="domain_production";
REMOTE_DUMP_PATH_PRODUCTION="/home/deployer/dumps";

# Color messages
#
DEFAULT_COLOR="\e[0m";
EXECUTE_COLOR="\e[1;36m";
